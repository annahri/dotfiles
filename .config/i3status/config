general {
    output_format = "i3bar"
    colors = true
    color = "#E5E9F0"
    color_good = "#A3BE8C"
    color_degraded = "#EBCB8B"
    color_bad = "#BF616A"
    interval = 1
}

order += "window"
order += "group net"
# order += "external_script corona"
order += "battery all"
# order += "disk /home"
# order += "cpu_usage"
# order += "load"
# order += "memory"
order += "group sysinfo"
order += "volume_status speakers"
order += "group date"
# order += "external_script hijri"
order += "tztime local"

group date {
    cycle = 10
    button_next = 2
    click_mode = "button"
    fixed_width = "true"
    format = "ðŸ“… {output} {button}"
    format_button_closed = "ðŸ“…"

    external_script hijri {
        format = "{output}"
        script_path = "/home/annahri/.local/bin/hijri.sh"
    }

    external_script date {
        format = "{output}"
        script_path = "LANG=id_ID.UTF-8 date +'%d %B %Y'"
    }
}

group sysinfo {
    # cycle = 6
    button_next = 1
    button_prev = 3
    format = "{output}"
    # fixed_width = "true"

    cpu_usage {
        format = "CPU %usage"
        max_threshold = 75
    }

    load {
        format = "LOAD %1min"
    }

    memory {
        format = "MEM %available / %total"
        threshold_degraded = "1G"
        format_degraded = "MEM < %available"
    }

    disk "/home" {
        format = "/home %avail"
    }
}

group net {
    # cycle = 8
    # fixed_width = "true"
    button_next = 1
    button_prev = 3
    format = "{output}"

    wireless _first_ {
        color = "ECEFF4"
        format_up = "[%essid] %ip"
        format_down = "down"
    }

    netdata curr {
        format = "[\?color=down Downrate: {down} Kb]"
    }

    netdata tot {
        format = "[\?color=total Total: {download} Mb]"
    }

}

window {
    max_width = 64
    format = '{title}'
}

external_script corona {
    format = "Covid-19 \[ {output} \]"
    script_path = "/home/annahri/.local/bin/corona.sh | awk '{print $5,$6,$7,$8}'"
}


ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
    status_unk = "? "
    status_full = "ðŸ‘"
}

volume_status speakers {
    command = "pactl"
	format = 'ðŸ”ˆ {percentage}%'
	format_muted = 'ðŸ”‡ {percentage}%'
	button_down = 5
	button_mute = 1
	button_up = 4
	thresholds = [(0, 'bad'), (5, 'degraded'), (10, 'good')]
	max_volume = 200
}

